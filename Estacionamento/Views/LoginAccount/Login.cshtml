@model Estacionamento.Models.Login


@{
	ViewData["Title"] = "Login";
}


@if (TempData["Mensagem"] != null)
{
	<div class="alert alert-danger">@TempData["Mensagem"]</div>
}




<div class="min-vh-100 d-flex align-items-center justify-content-center">
	<div class="container h-100">
		<div class="row justify-content-center">
			<div class="col-12 col-xl-10">
				<div class="card border-0 shadow-lg rounded-4 overflow-hidden">
					<div class="row g-0">
						<div class="col-md-6 bg-primary bg-gradient text-white p-4 d-flex align-items-center">
							<div class="text-center w-100">
								<h2 class="fw-bold mb-3">Bem-vindo de volta!</h2>
								<p class="text-white-50 mb-4">
									Acesse sua conta para gerenciar seu estacionamento de forma eficiente e profissional.
								</p>
								
								<img src="/Imagens/logo.png" alt="Logo PerTime" class="img-fluid mx-auto mb-3" style="max-width: 70%;" />

							</div>
						</div>

						<div class="col-md-6 bg-white">
							<div class="p-4">
								<div class="text-center mb-4">
									<h3 class="fw-bold">Acesse sua conta</h3>
									<p class="text-muted">Entre com suas credenciais para continuar</p>
								</div>

								<form method="post" asp-controller="LoginAccount" asp-action="Login">
									<div class="mb-3">
										<label class="form-label">Email</label>
										<div class="input-group">
											<span class="input-group-text bg-transparent">
												<i class="bi bi-envelope text-muted"></i>
											</span>
											<input type="email"
												   class="form-control"
												   placeholder="seu@email.com"
												   required
												   asp-for="Email">
										</div>
									</div>

									<div class="mb-3">
										<label class="form-label">Senha</label>
										<div class="input-group">
											<span class="input-group-text bg-transparent">
												<i class="bi bi-lock text-muted"></i>
											</span>
											<input type="password"
												   class="form-control"
												   placeholder="Sua senha"
												   required
												   asp-for="Senha">
										</div>
									</div>

									<div class="d-flex justify-content-between align-items-center mb-3">
										<div class="form-check">
											<input type="checkbox" class="form-check-input" id="remember">
											<label class="form-check-label" for="remember">Lembrar-me</label>
										</div>
										<a href="#" class="link-primary text-decoration-none">Esqueceu sua senha?</a>
									</div>

									<button type="submit" class="btn btn-primary w-100 py-2 mb-3 fw-semibold">
										Entrar
									</button>

									<div class="text-center">
										<span class="text-muted">Não tem uma conta? </span>
										<a href="#" class="link-primary text-decoration-none">Criar conta</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">











