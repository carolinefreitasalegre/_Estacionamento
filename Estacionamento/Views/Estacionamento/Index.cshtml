

@{
    ViewData["Title"] = "Início - | ";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}

@if (User.Identity.IsAuthenticated)
{
    <div class="alert alert-success">Bem-vindo, @User.Identity.Name!</div>
}



<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-primary">Sistema de Registro de Veículos</h2>

    <div class="row justify-content-center g-4">

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100 border-0 rounded-4">
                <div class="card-body text-center p-4">
                    <div class="icon-circle blue-icon mb-3">
                        <i class="bi bi-car-front-fill fs-2"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Veículos Registrados</h2>
                    <p class="card-text text-muted mb-4">Cadastre um novo veículo no sistema</p>
                    <a asp-controller="Estacionamento" asp-action="Veiculos" class="btn btn-primary w-100 py-2 rounded-3">Acessar</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100 border-0 rounded-4">
                <div class="card-body text-center p-4">
                    <div class="icon-circle blue-icon mb-3">
                        <i class="bi bi-car-front-fill fs-2"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Registrar Veículo</h2>
                    <p class="card-text text-muted mb-4">Cadastre um novo veículo no sistema</p>
                    <a asp-controller="Estacionamento" asp-action="CadastrarVeiculo" class="btn btn-primary w-100 py-2 rounded-3">Acessar</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100 border-0 rounded-4">
                <div class="card-body text-center p-4">
                    <div class="icon-circle green-icon mb-3">
                        <i class="bi bi-clipboard2-check-fill fs-2"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Registros Finalizados</h2>
                    <p class="card-text text-muted mb-4">Visualize todos os registros completos</p>
                    <a asp-controller="Estacionamento" asp-action="ListaFinalizados" class="btn btn-primary w-100 py-2 rounded-3">Acessar</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100 border-0 rounded-4">
                <div class="card-body text-center p-4">
                    <div class="icon-circle purple-icon mb-3">
                        <i class="bi bi-people-fill fs-2"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Administradores</h2>
                    <p class="card-text text-muted mb-4">Gerencie as contas administrativas</p>
                    <a asp-controller="Administrador" asp-action="Index" class="btn btn-danger w-100 py-2 rounded-3 mt-4" mt-3>Acessar</a>

                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">


<style>
	

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

    .icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .blue-icon {
        background-color: #EBF5FF;
        color: #2563EB;
    }

    .green-icon {
        background-color: #ECFDF5;
        color: #059669;
    }

    .purple-icon {
        background-color: #F5F3FF;
        color: #7C3AED;
    }
</style>


