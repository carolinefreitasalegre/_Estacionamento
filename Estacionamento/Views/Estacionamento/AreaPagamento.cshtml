@model Estacionamento.Models.RegistroEstacionamento


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Área de Pagamento</h4>
                </div>
                <div class="card-body">

                    <!-- Valor a pagar -->
                    <div class="mb-4">
                        <h5 class="text-secondary">Valor a pagar:</h5>
                        <h3 class="text-primary fw-bold">R$ @Model.ValorPagar</h3>
                    </div>

                    <!-- Opções de pagamento -->
                    <div class="mb-4">
                        <label class="form-label">Forma de Pagamento</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="pagamento" id="pix" checked>
                            <label class="form-check-label" for="pix">PIX</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="pagamento" id="debito">
                            <label class="form-check-label" for="debito">Cartão de Débito</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="pagamento" id="credito">
                            <label class="form-check-label" for="credito">Cartão de Crédito</label>
                        </div>
                    </div>

                    <!-- Botão de confirmar -->
                    <div class="d-grid">
                        <button class="btn btn-primary">Confirmar Pagamento</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>