@model Estacionamento.Dtos.Request.RegistroAdmRequest


@{
    ViewData["Title"] = "Cadastrar Administrador | ";
}



@foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">@modelError.ErrorMessage</div>
}




<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="mb-4">
                <a asp-controller="Administrador" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i>
                    <span class="ms-2">Voltar</span>
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="mx-auto mb-4 rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-person-plus fs-1 text-primary"></i>
                        </div>
                        <h1 class="h3 text-primary">Cadastro de Administrador</h1>
                        <p class="text-muted">Preencha os dados para cadastrar um novo administrador</p>
                    </div>

                    <form asp-action="CadastrarAdm" asp-controller="Administrador" method="post">
                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="nome"
                                       name="Nome"
                                       placeholder="Digite o nome completo"
                                       required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email"
                                       class="form-control"
                                       id="email"
                                       name="Email"
                                       placeholder="Digite o email"
                                       required
                                        minlength="8"
                                >
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="senha" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password"
                                       class="form-control"
                                       id="senha"
                                       name="Senha"
                                       placeholder="Digite a senha"
                                       required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            Cadastrar Administrador
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">