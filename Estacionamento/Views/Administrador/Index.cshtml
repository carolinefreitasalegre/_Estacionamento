
@model Administrador


@{
    ViewData["Title"] = "Administradores | ";
}



@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}


<div class="container py-5">
    <h3 class="text-primary text-center fw-bold mb-5">
        Área do Administrador
    </h3>

    <div class="row justify-content-center g-4">
        <div class="col-md-5">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body p-4">
                    <div class="mx-auto mb-4 rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-people fs-1 text-primary"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Lista de Administradores</h2>
                    <p class="card-text text-muted mb-4">
                        Visualize todos os administradores do sistema
                    </p>
                    <a class="btn btn-primary w-100 py-2" asp-controller="Administrador" asp-action="Administradores">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body p-4">
                    <div class="mx-auto mb-4 rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-person-plus fs-1 text-primary"></i>
                    </div>
                    <h2 class="card-title h4 mb-3">Adicionar Administradores</h2>
                    <p class="card-text text-muted mb-4">
                        Cadastre novos administradores no sistema
                    </p>
                    <a class="btn btn-primary w-100 py-2" asp-controller="Administrador" asp-action="CadastrarAdm">
                        Acessar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
